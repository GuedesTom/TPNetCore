@model TPNetCore.Models.Proprietaire

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Proprietaire</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nom)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nom)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Prenom)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Prenom)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Adresse)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Adresse)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Photo)
        </dt>
        <dd class="col-sm-10">
            <img alt="Photo Livre" src="~/Images/@Html.DisplayFor(model => model.Photo)" width="100" height="180" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Voitures)
        </dt>
        <dd class="col-sm-10">
            @foreach (var v in Model.Voitures)
            {
            <dt class="col-sm-2">
                @Html.DisplayFor(x => v.Nom)
                <img alt="Photo Livre" src="~/Images/@Html.DisplayFor(x => v.Photo)" width="100" height="180" />
            </dt>
            }
            </dd>
        </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
